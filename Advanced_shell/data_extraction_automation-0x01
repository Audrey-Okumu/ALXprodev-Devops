#!/bin/bash

# Input JSON file
INPUT_FILE="data.json"

# Extract data using jq
name=$(jq -r '.name' "$INPUT_FILE")
height_dm=$(jq -r '.height' "$INPUT_FILE")
weight_hg=$(jq -r '.weight' "$INPUT_FILE")
type=$(jq -r '.types[0].type.name' "$INPUT_FILE")

# Convert values
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
formatted_weight=$(awk "BEGIN {printf \"%.0f\", $weight_hg / 10}")

# Capitalize name and type
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# output format 
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
