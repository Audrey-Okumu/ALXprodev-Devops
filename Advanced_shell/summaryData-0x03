#!/bin/bash

# Directory containing Pokémon data
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Check if directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "❌ Directory $DATA_DIR not found. Please run Task 2 first."
    exit 1
fi

# Create or overwrite CSV report
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through all JSON files and extract details
for file in "$DATA_DIR"/*.json; do
    if [ -s "$file" ]; then
        name=$(jq -r '.name' "$file")
        height=$(jq -r '.height' "$file")
        weight=$(jq -r '.weight' "$file")

        # Convert height and weight to meters/kg
        formatted_height=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
        formatted_weight=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

        # Capitalize first letter using sed instead of ${name^}
        name=$(echo "$name" | sed 's/.*/\u&/')

        echo "$name,$formatted_height,$formatted_weight" >> "$REPORT_FILE"
    fi
done

echo ""
echo "CSV Report generated at: $REPORT_FILE"
echo ""
cat "$REPORT_FILE"
echo ""

# Calculate averages using awk
awk -F',' '
NR > 1 { 
    total_height += $2; 
    total_weight += $3; 
    count++ 
}
END {
    if (count > 0) {
        avg_h = total_height / count;
        avg_w = total_weight / count;
        printf "\nAverage Height: %.2f m\n", avg_h;
        printf "Average Weight: %.2f kg\n", avg_w;
    }
}' "$REPORT_FILE"
