#!/bin/bash

# API endpoint
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Check the status code
STATUS_CODE=$(cat status_code.txt)

# Evaluate response
if [ "$STATUS_CODE" -eq 200 ]; then
    echo "✅ Successfully retrieved data for Pikachu."
else
    echo "❌ Failed to fetch data (HTTP $STATUS_CODE)" | tee -a "$ERROR_FILE"
    echo "Timestamp: $(date)" >> "$ERROR_FILE"
    echo "-------------------------------------" >> "$ERROR_FILE"
fi

# Clean up
rm -f status_code.txt
